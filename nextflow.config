profiles {
    magnus {
        workDir = '/group/ja3/wallaby/runs/work/'
        tmpDir = '/group/ja3/wallaby/tmp/'

        process {
            cache = 'lenient'
            stageInMode = 'symlink'
        }

        process {
            executor = 'slurm'
            queue = 'workq'
            module = 'singularity'
            clusterOptions = '--nodes=1 --account=ja3 --time=24:00:00'

            withName: linmos {
                module = 'singularity'
                executor = 'slurm'
                clusterOptions = '--account=ja3 --nodes=12 --ntasks-per-node=12 --cpus-per-task=1 --time=24:00:00'
                queue = 'workq'
            }
        }

        params {
            SCRATCH_ROOT = "/group/ja3/wallaby/"
            WORKDIR = "/group/ja3/wallaby/postprocessing"
            SINGULARITY_CACHEDIR = "/group/ja3/wallaby/apps/singularity"
            ASTROPY_CACHEDIR = "/group/ja3/ashen/"

            SOFIA_PARAMETER_FILE = "/group/ja3/wallaby/config/sofia.par"
            S2P_TEMPLATE = "/group/ja3/wallaby/config/s2p_setup.ini"
            SOFIAX_CONFIG_FILE = "/group/ja3/wallaby/config/sofiax.ini"
            LINMOS_CONFIG_FILE = "/group/ja3/wallaby/config/linmos.config"
        }

        singularity {
            enabled = true
            cacheDir = '/group/ja3/wallaby/apps/singularity'
            envWhitelist = 'SINGULARITY_BINDPATH, SINGULARITYENV_LD_LIBRARY_PATH'
        }

        docker.enabled = false
    }

    carnaby {
        process {
            executor = 'slurm'
            queue = 'cpu'
            module = ['singularity']

            withName: linmos {
                module = ['mpich', 'singularity']
                executor = 'slurm'
                clusterOptions = '--nodes=12 --ntasks-per-node=12'
                queue = 'cpu'
            }
        }

        params {
            SCRATCH_ROOT = "/mnt/shared"
            WORKDIR = "/mnt/shared/wallaby"
            SINGULARITY_CACHEDIR = "/mnt/shared/wallaby/apps/singularity"

            CASDA_CREDENTIALS_CONFIG = "/mnt/shared/wallaby/config/casda.ini"
            SOFIA_PARAMETER_FILE = "/mnt/shared/wallaby/config/sofia.par"
            S2P_TEMPLATE = "/mnt/shared/wallaby/config/s2p_setup.ini"
            SOFIAX_CONFIG_FILE = "/mnt/shared/wallaby/config/sofiax.ini"
            LINMOS_CONFIG_FILE = "/mnt/shared/wallaby/config/linmos.config"
            DATABASE_ENV = "/mnt/shared/wallaby/config/database.env"
        }

        process.module = 'singularity'
        singularity {
            enabled = true
            envWhitelist = 'SINGULARITY_BINDPATH, SINGULARITYENV_LD_LIBRARY_PATH'
            cacheDir = "/mnt/shared/wallaby/apps/singularity/"
        }

        docker.enabled = false
    }

    setonix {
        workDir = '/scratch/ja3/wallaby/work/'

        process {
            executor = 'slurm'
            queue = 'work'
            module = ['singularity/3.8.6']
            clusterOptions = '--account=ja3 --time=24:00:00'

            withName: sofia {
                clusterOptions = '--account=ja3 --time=24:00:00 --mem-per-cpu=128G'
            }
        }

        params {
            SCRATCH_ROOT = "/scratch/ja3/wallaby"
            WORKDIR = "/scratch/ja3/wallaby"
            SINGULARITY_CACHEDIR = "/scratch/ja3/wallaby/singularity"

            DATABASE_ENV = "/scratch/ja3/ashen/config/database.env"

            CASDA_CREDENTIALS_CONFIG = "/scratch/ja3/wallaby/config/casda.ini"
            SOFIA_PARAMETER_FILE = "/scratch/ja3/wallaby/config/sofia.par"
            S2P_TEMPLATE = "/scratch/ja3/wallaby/config/s2p_setup.ini"
            SOFIAX_CONFIG_FILE = "/scratch/ja3/wallaby/config/sofiax.ini"
            LINMOS_CONFIG_FILE = "/scratch/ja3/wallaby/config/linmos.config"
        }

        env {
            XDG_CACHE_HOME = "/scratch/ja3/ashen/"
        }

        process.module = 'singularity/3.8.6'
        singularity {
            enabled = true
            envWhitelist = 'SINGULARITY_BINDPATH, SINGULARITYENV_LD_LIBRARY_PATH'
            cacheDir = "/scratch/ja3/wallaby/singularity"
        }

        docker.enabled = false
    }

    dingo {
        workDir = '/scratch/ja3/dingo/work/'

        process {
            executor = 'slurm'
            queue = 'work'
            module = ['singularity/3.8.6']
            clusterOptions = '--account=ja3 --time=24:00:00'

            withName: sofia {
                clusterOptions = '--account=ja3 --time=24:00:00 --mem-per-cpu=128G'
            }
        }

        params {
            SCRATCH_ROOT = "/scratch/ja3/dingo"
            WORKDIR = "/scratch/ja3/dingo"
            SINGULARITY_CACHEDIR = "/scratch/ja3/wallaby/singularity"

            SOFIA_PARAMETER_FILE = "/scratch/ja3/dingo/config/sofia.par"
            S2P_TEMPLATE = "/scratch/ja3/dingo/config/s2p_setup.ini"
            SOFIAX_CONFIG_FILE = "/scratch/ja3/dingo/config/sofiax.ini"
            LINMOS_CONFIG_FILE = "/scratch/ja3/dingo/config/linmos.config"
        }

        env {
            XDG_CACHE_HOME = "/scratch/ja3/ashen/"
        }

        process.module = 'singularity/3.8.6'
        singularity {
            enabled = true
            envWhitelist = 'SINGULARITY_BINDPATH, SINGULARITYENV_LD_LIBRARY_PATH'
            cacheDir = "/scratch/ja3/wallaby/singularity"
        }

        docker.enabled = false
    }
}

params {
    METADATA_SUBDIR = "metadata"
    RUN_SUBDIR = "run"
    FOOTPRINT_SUBDIR = "data/footprints"
    MOSAICS_SUBDIR = "data/mosaics"

    MOSAIC_OUTPUT_FILENAME = "mosaic"
    SOFIA_OUTPUTS_DIRNAME = "outputs"
    LINMOS_CONFIG_FILENAME = "linmos.config"
    LINMOS_LOG_FILE = "askap.linmos.log"
    SOFIAX_CONFIG_FILENAME = "sofiax.ini"
    WALLMERGE_OUTPUT = "mom0.fits"
    REGION = ""

    CASDA_DOWNLOAD_IMAGE = "docker://aussrc/casda_download:latest"
    OBSERVATION_METADATA_IMAGE = "docker://aussrc/observation_metadata:latest"
    METADATA_IMAGE = "docker://aussrc/metadata_tools:latest"
    WALLABY_COMPONENTS_IMAGE = "docker://aussrc/wallaby_scripts:latest"
    UPDATE_LINMOS_CONFIG_IMAGE = "aussrc/update_linmos_config:latest"
    LINMOS_IMAGE = "docker://csirocass/askapsoft:1.9.1-casacore3.5.0-mpich"
    S2P_SETUP_IMAGE = "aussrc/s2p_setup:latest"
    UPDATE_SOFIAX_CONFIG_IMAGE = "aussrc/update_sofiax_config:latest"
    SOFIA_IMAGE = "docker://astroaustin/sofia:v0.0.1c"
    SOFIAX_IMAGE = "docker://aussrc/sofiax:latest"
    GET_DSS_IMAGE = "docker://aussrc/dss_image:latest"
    WALLMERGE_IMAGE = "aussrc/wallmerge:v0.1.0"
}
